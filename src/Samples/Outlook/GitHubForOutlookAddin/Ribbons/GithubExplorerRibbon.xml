<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" 
          xmlns="http://schemas.microsoft.com/office/2006/01/customui"
          xmlns:ns="VSTOContrib.GitHub">
  <ribbon>
    <tabs>
      <tab idQ="ns:tabVSTOContrib" label="GitHub">
        <group id="githubGroup" label="GitHub">
          <button id="createTask"
                  label="Create Issue"
                  screentip="Create Issue"
                  size="large"
                  showImage="true"
                  getImage="GetImage"
                  onAction="CreateIssue"
                  getEnabled="CanCreateIssue" />
          <button id="settings" label="Settings" onAction="ShowSettings" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>